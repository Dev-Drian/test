{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TableDefinition",
  "description": "Definición de tabla. Base: db_${workspaceId}_table. Datos: db_${workspaceId}_table_${tableId}",
  "type": "object",
  "required": ["_id"],
  "properties": {
    "_id": { "type": "string" },
    "_rev": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "type": { "type": "string", "enum": ["contacts", "calendar", "docs", "custom"] },
    "color": { "type": "string" },
    "icon": {
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      }
    },
    "permissions": {
      "type": "object",
      "description": "Permisos de acciones del bot sobre esta tabla",
      "properties": {
        "allowQuery": { "type": "boolean", "default": true, "description": "Permitir consultar/leer datos" },
        "allowCreate": { "type": "boolean", "default": true, "description": "Permitir crear registros" },
        "allowUpdate": { "type": "boolean", "default": true, "description": "Permitir actualizar registros" },
        "allowDelete": { "type": "boolean", "default": false, "description": "Permitir eliminar registros (false por defecto)" }
      }
    },
    "validation": {
      "type": "object",
      "description": "Configuración de validaciones automáticas",
      "properties": {
        "preventDuplicates": {
          "type": "object",
          "description": "Prevenir registros duplicados",
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "fields": { "type": "array", "items": { "type": "string" }, "description": "Campos que deben ser únicos combinados" }
          }
        },
        "availability": {
          "type": "object",
          "description": "Validación de disponibilidad/conflictos de horario",
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "dateField": { "type": "string", "description": "Campo de fecha a validar" },
            "timeField": { "type": "string", "description": "Campo de hora a validar" },
            "excludeStatuses": { 
              "type": "array", 
              "items": { "type": "string" },
              "default": ["Cancelada", "cancelada"],
              "description": "Estados a excluir de la validación"
            },
            "workingHours": {
              "type": "object",
              "properties": {
                "start": { "type": "string", "default": "09:00" },
                "end": { "type": "string", "default": "18:00" },
                "interval": { "type": "integer", "default": 30, "description": "Minutos entre slots" }
              }
            }
          }
        }
      }
    },
    "headers": {
      "type": "array",
      "description": "Definición de campos/columnas de la tabla",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "key": { "type": "string", "description": "Identificador único del campo" },
          "label": { "type": "string", "description": "Nombre visible del campo" },
          "title": { "type": "string" },
          "type": { 
            "type": "string",
            "enum": ["text", "number", "integer", "currency", "email", "phone", "date", "time", "select", "relation", "textarea", "url", "boolean"],
            "description": "Tipo de dato del campo"
          },
          "options": { "type": "array", "description": "Opciones para campos tipo select" },
          "relatedTable": { "type": "string", "description": "ID de tabla relacionada para campos tipo relation" },
          "required": { "type": "boolean", "default": false, "description": "Si el campo es obligatorio" },
          "validation": {
            "type": "object",
            "description": "Reglas de validación del campo",
            "properties": {
              "min": { "type": "number", "description": "Valor mínimo (para números) o longitud mínima (para texto)" },
              "max": { "type": "number", "description": "Valor máximo (para números) o longitud máxima (para texto)" },
              "pattern": { "type": "string", "description": "Expresión regular para validar el formato" },
              "patternMessage": { "type": "string", "description": "Mensaje de error cuando no cumple el patrón" },
              "digits": { "type": "integer", "description": "Número exacto de dígitos (para teléfonos)" },
              "allowNegative": { "type": "boolean", "default": true, "description": "Permitir valores negativos (para números)" },
              "customRules": {
                "type": "array",
                "description": "Reglas de validación personalizadas",
                "items": {
                  "type": "object",
                  "properties": {
                    "rule": { "type": "string", "enum": ["notEmpty", "isPositive", "isNegative", "isInteger", "isDecimal", "minLength", "maxLength", "exactLength", "contains", "notContains", "startsWith", "endsWith", "matches"] },
                    "value": { "type": ["string", "number"] },
                    "message": { "type": "string", "description": "Mensaje de error personalizado" }
                  }
                }
              }
            }
          },
          "defaultValue": { "type": ["string", "number", "boolean", "null"], "description": "Valor por defecto" },
          "placeholder": { "type": "string", "description": "Texto de ayuda en el input" },
          "helpText": { "type": "string", "description": "Texto de ayuda adicional" }
        }
      }
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  }
}
